<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".know_about_op"
    android:background="@drawable/opstudentbackground">

    <ImageButton
        android:id="@+id/otago_logo_img"
        android:layout_width="wrap_content"
        android:layout_height="205dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/oplogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tooltipText="click to go back"
        android:onClick="opLogo"/>
    <TextView
        android:id="@+id/know_about_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:text="ABOUT OTAGO POLYTECHNIC"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/otago_logo_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/know_about_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:text="Otago Polytechnic is proud to be a leader in high quality, career-focused education with some of the best student achievement and satisfaction results in New Zealand."
        android:textSize="15sp"
        android:textStyle="italic"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/know_about_title_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="5dp"

        />
    <TextView
        android:id="@+id/know_about_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:text="Employers love our graduates because they are work-ready, confident and solution-focused. We believe our people make a better world and our alumni are global citizens who care about making a difference. We have been given the highest possible quality ratings from Government and, as educators, we offer innovative ways for our learners to study so they can build their capability and realise their potential."
        android:textSize="10sp"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/know_about_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        />
    <TextView
        android:id="@+id/know_about_txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:text="With online tools, blended delivery options and pathways from foundation through to postgraduate, time, distance and previous learning are no barriers to gaining the education you want. We can even give credit for knowledge gained in your career and now offer a digital micro-credentialing process where learners can be assessed and ‘show what they know’ without undertaking a formal qualification."
        android:textSize="10sp"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/know_about_txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        />
    <TextView
        android:id="@+id/know_about_txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:text="Collaborations are at the heart of our philosophy for learning and growth and our commitment to sustainability plays a major role in everything we do, influencing both day-to-day operation and our future decision-making."
        android:textSize="10sp"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/know_about_txt3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        />
    <TextView
        android:id="@+id/know_about_txt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:text="We are highly active in the field of applied research with our researchers and their students contributing to professional and community networks nationally and internationally. We have also won the prestigious Baldrige-affiliated Performance Excellence Study Award (PESA)."
        android:textSize="10sp"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/know_about_txt4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        />

    <ImageView
        android:id="@+id/op_campus_img"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/opcampus"
        app:layout_constraintTop_toBottomOf="@id/know_about_txt5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>