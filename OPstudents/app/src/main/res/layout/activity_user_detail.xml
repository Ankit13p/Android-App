<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_detail" android:background="@drawable/opstudentbackground">

    <ImageButton
        android:id="@+id/otago_logo"
        android:layout_width="wrap_content"
        android:layout_height="205dp"
        android:layout_centerHorizontal="true"
        android:onClick="opLogo"
        android:src="@drawable/oplogo"
        android:tooltipText="click to go back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/user_name_text"
        android:background="@android:color/holo_blue_bright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Welcome "
        android:textStyle="bold|italic"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/otago_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/op_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_name_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="View Profile"
        android:padding="10dp"
        android:tooltipText="View Profile"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:layout_margin="10dp"
        android:onClick="view_profile"
        />
    <Button
        android:id="@+id/contact_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/op_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Edit Profile"
        android:padding="10dp"
        android:tooltipText="Edit Profile"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:layout_margin="10dp"
        android:onClick="editProfile"
        />
    <Button
        android:id="@+id/signup_signin_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contact_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Delete Profile"
        android:padding="10dp"
        android:tooltipText="Delete Profile"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:layout_margin="10dp"
        android:onClick="delete"
        />
    <Button
        android:id="@+id/visit_again_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/signup_signin_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Logout"
        android:padding="10dp"
        android:tooltipText="Visit Again"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:layout_margin="10dp"
        android:onClick="logout"
        />


</android.support.constraint.ConstraintLayout>