<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/opstudentbackground">

    <ImageView
        android:id="@+id/otago_logo"
        android:layout_width="wrap_content"
        android:layout_height="205dp"
        android:src="@drawable/oplogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:text="Welcome to Otago Polytechnic"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/otago_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
         />
    <TextView
        android:id="@+id/welcome2_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:text="Nau mai ki Otago Polytechnic"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/welcome_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/register_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:text="To login / Register"
        android:textAlignment="textStart"
        android:paddingStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@id/welcome2_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:tooltipText="Click to Login"
        />

    <ImageView
        android:id="@+id/signup_signin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loginregister"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/register_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="signup"/>

    <TextView
        android:id="@+id/further_info_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:text="For further information"
        android:textAlignment="textStart"
        android:paddingStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@id/signup_signin_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:tooltipText="Click to Login"
        />


    <Button
        android:id="@+id/op_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/further_info_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Know about OP"
        android:padding="10dp"
        android:tooltipText="Know about OP"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:layout_margin="10dp"
        android:onClick="aboutOp"
        />
    <Button
        android:id="@+id/contact_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/op_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Contact Us"
        android:padding="10dp"
        android:tooltipText="Contact Us"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:layout_margin="10dp"
        android:onClick="contactUs"
        />

    <Button
        android:id="@+id/Student_Support_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contact_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Student Success"
        android:padding="10dp"
        android:tooltipText="Student Success"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:layout_margin="10dp"
        android:onClick="student_support"
        />

</android.support.constraint.ConstraintLayout>