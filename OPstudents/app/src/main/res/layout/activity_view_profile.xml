<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_profile"
    android:background="@drawable/opstudentbackground">

    <ImageButton
        android:id="@+id/image_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:src="@drawable/oplogovector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="back"
        />
    <TextView
        android:id="@+id/deatil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textSize="35sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_btn"
        android:textStyle="bold|italic"
        android:layout_marginBottom="20dp"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        app:contentPadding="7dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/deatil"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_orange_light"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/fname_vp_txt"
                android:layout_width="wrap_content"
                android:text="hi"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/lname_vp_txt"
                android:text="how are you?"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/fname_vp_txt"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingEnd="10dp"/>
            <TextView
                android:id="@+id/dob_vp_txt"
                android:text="12/32/3443"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fname_vp_txt"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/user_vp_txt"
                android:text="dxjfsdns"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/dob_vp_txt"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/password_vp_txt"
                android:text="dxjfsdns"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/user_vp_txt"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/address_txt"
                android:text="Address"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password_vp_txt"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/street_vp_txt"
                android:text="dxjfsdns"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/address_txt"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/suburb_vp_txt"
                android:text="dxjfsdns"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/street_vp_txt"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/city_vp_txt"
                android:text="dxjfsdns"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/suburb_vp_txt"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/postcode_vp_txt"
                android:text="dxjfsdns"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/city_vp_txt"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ok"
        android:text="ok"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card1" />


</android.support.constraint.ConstraintLayout>